@using BookStore.Models
@using PagedList.Mvc
@model PagedList.PagedList<SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="khung">
    <div class="section">
        <p class="section-head" style="text-align: Center; color: blue">ĐÂY LÀ TRANG CHỦ</p>
        @foreach (var sach in Model)
        {
            <div class="prod_box">
                <div class="center_prod_box">
                    <a href="@Url.Action("Details", "BookStore", new {id = sach.Masach})">
                        <img alt="@sach.Tensach" src="~/HinhSanPham/@sach.Anhbia" width="165" height="113" border="0" class="oferta_img" />
                        <!--<span>@sach.Tensach</span>-->
                    </a>
                    <div class="product_title"><a>@sach.Tensach</a></div>
                </div>
                <div class="prod_details_tab"> <a href="http://all-free-download.com/free-website-templates/" class="prod_buy">Add to Cart</a> <a href="http://all-free-download.com/free-website-templates/" class="prod_details">Details</a> </div>
            </div>
            
        }
    </div>
</div>
@* Tạo liên kết các trang*@

<div class="MenuTrang">
    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
        border: 1px solid;
        margin: 0px;
        padding: 5px;
    }

        .MenuTrang li:hover {
            cursor: pointer;
            color: white;
            background-color: #6cb01870;
            border-radius: 5px;
            transition: all 0.2s linear;
        }
    .khung {
        width: 874px;
        height: 100%;
    }
    .section {
        display: inline-block;
        height: auto;
        width: 793px;
        background-color: white;
    }

    .section-head {
        margin: 0;
        font-size: 22px;
        /*border: 1px solid rgba(191,191,191,1.00);*/
        margin-left: 2px;
        padding-top: 8px;
        width: 789px;
        padding-bottom: 5px;
        text-indent: 30px;
        /*background: linear-gradient(to right,#003e52,#1895b0);*/
        color: white;
        border-radius: 8px;
    }
</style>
