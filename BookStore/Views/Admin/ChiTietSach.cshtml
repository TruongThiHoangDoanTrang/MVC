@model BookStore.Models.SACH

@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div>
    <h2>THÔNG TIN CHI TIẾT SÁCH</h2>

    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên sách:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tensach)
            </dd>

            <dt>
                Giá bán:
            </dt>

            <dd>
                @string.Format("{0:0,0}", Model.Giaban) VNĐ
            </dd>

            <dt>
                Mô tả:
            </dt>

            <dd style="width:600px; text-align: justify">
                @Html.DisplayNameFor(model => model.Mota)
            </dd>

            <dt>
                Ảnh bìa:
            </dt>

            <dd>
                <img name="Anhbia" src="@Url.Content("~/HinhSanPham/"+ Model.Anhbia)" width="165" height="113" border="0" />
            </dd>
            <dt>
                Ngày cập nhật:
            </dt>
            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
            </dd>
            <dt>
                Số lượng tồn:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Soluongton)
            </dd>
            <dt>
                Tên chủ đề:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CHUDE.TenChuDe)
            </dd>
            <dt>
                Nhà xuất bản:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NHAXUATBAN.TenNXB)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Điều chỉnh", "SuaSach", new { id = Model.Masach }) |
        @Html.ActionLink("Back to List", "Sach")
    </p>
